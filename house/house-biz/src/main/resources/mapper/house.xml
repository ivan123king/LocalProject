<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lw.house.mapper.HouseMapper">

	<sql id="houseField">
		a.id,a.type,a.name,a.price,a.images,
		a.area,a.baths,a.beds,a.rating,a.remarks,
		a.properties,a.floor_plan,a.tags,a.create_time,
		a.city_id,a.community_id,a.address,a.state
	</sql>

	<!-- 此处resultType不需要写全名，是因为在mybatis-config中typeAlias节点处定义了User类的别名 -->
	<select id="selectPageHouses" resultType="house">
		select <include refid="houseField"></include>
		from house a
		<include refid="houseCondition"/>
		<choose>
			<when test="house.sort!=null and house.sort=='price_asc'">
				order by a.price asc
			</when>
			<when test="house.sort!=null and house.sort=='price_desc'">
				order by a.price desc
			</when>
		</choose>
		<if test="pageParams.offset !=null and pageParams.limit!=null">
			limit #{pageParams.offset},#{pageParams.limit}
		</if>
		<if test="pageParams.offset ==null and pageParams.limit!=null">
			limit #{pageParams.limit}
		</if>
	</select>
	
	<sql id="houseCondition">
		<where>
			<if test="house.id!=null and house.id!=0">
				and a.id = #{house.id}
			</if>
			<if test="house.type!=null">
				and a.type = #{house.type}
			</if>
			<if test="house.name!=null and house.name!=''">
				<bind name="pattern1" value=" '%'+house.name+'%' " ></bind>
				and a.name like #{pattern1}
			</if>
			<if test="house.ids">
				and a.id in 
				<foreach collection="house.ids" item="item" index="index" 
					open="(" close=")" separator=",">
					#{item}
				</foreach>
			</if>
		</where>
	</sql>


	<select id="selectPageCount" resultType="long">
		select count(id) from house a
		<include refid="houseCondition"/>
	</select>
	
	<!-- 查询小区 -->
	<select id="selectCommunity" resultType="community">
		select * from community
		<where>
			<if test="id!=null and id!=0">
				and id = #{id}
			</if>
			<if test="name !=null and name!=''">
				and name = #{name}
			</if>
		</where>
	</select>
	
	
</mapper>
